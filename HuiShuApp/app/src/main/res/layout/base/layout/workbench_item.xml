<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/workbench_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <LinearLayout
        android:id="@+id/workbench_item_main"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/fab_margin"
        android:paddingBottom="@dimen/fab_margin"
        android:paddingLeft="@dimen/dp_3"
        android:paddingRight="@dimen/dp_3">
        <com.deshine.huishu.app.widget.IconfontTextView
            android:id="@+id/workbench_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/hs_icon_ziyuan"
            android:gravity="center"
            android:textSize="@dimen/font_norma30"/>
        <TextView
            android:id="@+id/workbench_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_5"
            android:text="客户自提"/>
    </LinearLayout>
    <View
        android:id="@+id/workbench_item_bottomline"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/workbench_item_main"
        android:background="@color/hs_gray"
        android:contentDescription="@null"
        android:visibility="gone"
        />
    <View
        android:id="@+id/workbench_item_rightline"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/workbench_item_bottomline"
        android:background="@color/hs_gray"
        android:contentDescription="@null"
        android:visibility="gone"
        />
</RelativeLayout>